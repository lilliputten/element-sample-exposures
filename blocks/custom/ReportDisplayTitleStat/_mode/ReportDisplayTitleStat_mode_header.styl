@require '../!Defaults.styl'

.ReportDisplayTitleStat
    &_mode
        &_header
            & ^[0]__Item
                // background-color: $HeaderItemBgColor
                color: $HeaderItemFgColor
                &
                &:first-child
                    border-color: $HeaderDelimColor
                & ^[0]__Delim
                    border-right-color: $HeaderDelimColor
                &_hovered
                    background-color: $HeaderItemHoveredBgColor
                &_resizing
                    background-color: $HeaderItemResizingBgColor
                    & ^[0]__Delim
                        border-right-color: $HeaderDelimResizingColor
